@using Microsoft.AspNet.Identity;
@model List<Cafe.DAL.Product>
@{
    ViewBag.Title = "Menu Page";
    var UserID = User.Identity.GetUserId();
    var UserName = User.Identity.Name;
}

<style>
    .ProductImg {
        height: 150%;
    }
</style>

<div id="themeSlider" class="carousel slide" data-ride="carousel">
<ol class="carousel-indicators">
    <li data-target="#themeSlider" data-slide-to="0" class="active"></li>
    <li data-target="#themeSlider" data-slide-to="1"></li>
    <li data-target="#themeSlider" data-slide-to="2"></li>
</ol>
<div class="carousel-inner">
    <div class="item active">
        <div class="imgOverlay"></div>
        <img style="height:150%;width:100%" src="../Images/PJ/Beer1.jpg">
        <div class="carousel-caption">

        </div>
    </div>
    <div class="item">
        <div class="imgOverlay"></div>
        <img style="height:150%;width:100%" src="../Images/PJ/cafe.JPG">
        <div class="carousel-caption">

        </div>
    </div>
    <div class="item">
        <div class="imgOverlay"></div>
        <img style="height:150%;width:100%" src="../Images/PJ/Lemon Tea1.jpg">
        <div class="carousel-caption">
        </div>
    </div>
</div>
<a class="left carousel-control" href="#themeSlider" data-slide="prev">
    <span class="fa fa-chevron-left"></span>
</a>
<a class="right carousel-control" href="#themeSlider" data-slide="next">
    <span class="fa fa-chevron-right"></span>
</a>

</div>
<div class="olContent f1"><h2 style="color:black">Search Product</h2></div>
<form method="post">
    <div class="olSearch fr">
        <input type="text" name="search" placeholder="Enter Keyword" class="inputComn form-control" />
        <div class="searchIcon">
            <button type="submit" class="searchBtn">
                <img src="~/Images/PJ/searchIcon.png" />
            </button>
        </div>
    </div>
</form>

<div class="row">
    @foreach (var product in this.Model)
    {
        <div class="col-sm-6 col-md-4">
            <div class="thumbnail">
                <img class="ProductImge" src="~/ProductImages/@product.ProductImage" alt="Image" />
                <div class="caption">
                    <h3>@product.ProductName</h3>
                    <p>@product.Description</p>
                    <p>Price : @product.Price</p>
                    <p>
                        <a onclick="AddToCart('@product.ProductId')" href="javascript:void(0);"
                           class="btn btn-primary" role="button">
                            Add to Cart
                        </a>
                        <a href="javascript:void(0);" class="btn btn-default" role="button">
                            Details
                        </a>
                    </p>
                </div>
            </div>
        </div>
    }
</div>




